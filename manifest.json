{
  "manifest_version": 2,
  "name": "ChatGPT Extension",
  "version": "1.1",
  "description": "Opens a ChatGPT pop-up window",
  "permissions": [
    "activeTab",
    "identity.email"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
