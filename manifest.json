{
  "manifest_version": 3,
  "name": "Chat Extension",
  "version": "1.2",
  "description": "Opens an AI Chat pop-up window",
  "permissions": [
    "activeTab",
    "identity.email",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "chatext.png"
  },
  "icons": {
    "16": "chatext.png",
    "48": "chatext.png",
    "128": "chatext.png"
  }
}
